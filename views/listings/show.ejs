<%-layout("/layout/boilerplate")%>

    <div class="row">
        <div class="col-8 offset-2">

            <h3>
                <%=listing.title%>
            </h3>
            <div class="card listing-card">
                <img src="<%=listing.image%>" class="card-img-top show-img">
                <div class=" card-body ">
                    <p class="card-text">
                        Owned by: <b><%=listing.owner.username%></b>
                    </p>
                    <p class="card-text">
                        <%=listing.description%>
                    </p>
                    <p class="card-text">&#8377; <%=listing.price.toLocaleString("en-IN")%></p>
                    <p class="card-text">
                        <%=listing.location%>
                    </p>
                    <p class="card-text">
                        <%=listing.country%>
                    </p>
                </div>
            </div>

        </div>
       
        <div class="bttn offset-2 ">
            <form method="get" action="/listing/<%= listing._id %>/edit">
                <button class="btn btn-dark">Edit</button>
            </form>&nbsp;&nbsp;
            <form action="/listing/<%=listing._id%>?_method=delete" method="post">
                <Button class="btn btn-dark">Delete</Button>
            </form>
        </div>
     
        <br><br>

        <div class="col-8 offset-2 mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listing/<%=listing._id%>/review" method="post" class="needs-validation" novalidate>
                <div>
                    <label for="rating" class="form-label mt-3">Rating</label>
                    <input type="range" max="5" min="1" id="rating" name="review[rating]">
                </div>
                <div>
                    <label for="comment" class="form-label mt-3">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control"
                        required></textarea>
                </div>
                <br>
                <button class="btn btn-outline-dark">Submit</button>
            </form>

            <hr />
            <h4>All Reviews</h4>
            <div class="row ">
                <% for(review of listing.reviews) {%>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">Darshan</h5>
                            <p class="card-text">
                                <%=review.comment%>
                            </p>
                            <p class="card-text">
                                <%=review.rating%>stars
                            </p>
                            <form action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=delete"
                                method="post">
                                <button class="btn btn-dark mb-3">Delete</button>
                            </form>
                        </div>

                    </div>
                    <% } %>

            </div>
        </div>
    </div>