<%-layout("/layout/boilerplate")%>

    <body>
        <h3>All listing</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
            <% for(let listing of allListing){%>
                <a href="/listing/<%=listing._id%>" class="card-link">
                <div class="card col listing-card" >
                    <img src="<%=listing.image%>" class="card-img-top" style="height: 20rem;" >

                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b>
                        </p>
                        <p><%=listing.price.toLocaleString("en-IN")%></p>
            
                    </div>
                </div>
                </a>
                <% }%>
</div>
    </body>